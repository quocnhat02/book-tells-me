<div class="container p-4">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <div class="card card-body">
        <h3><b>Thông tin người dùng</b></h3>

        <form method="POST" action="#">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputName">Tên Người dùng:</label>
              <input
                type="text"
                class="form-control"
                id="inputName"
                placeholder="tên người dùng"
                name="name"
                required
                value="{{name}}"
              />
            </div>

          </div>
          <div class="form-group">
            <label for="inputAddress">Địa chỉ:</label>
            <input
              type="text"
              class="form-control"
              id="inputAddress"
              placeholder="mô tả sách"
              name="address"
              required
              value="{{address}}"
            />
          </div>
          <div class="form-group">
            <label for="inputAddress2">Số điện thoại:</label>
            <input
              type="text"
              class="form-control"
              id="inputAddress2"
              placeholder="+84..."
              name="phone"
              maxlength="12"
              required
              value="{{phone}}"
            />
          </div>
          <div class="form-group">
            <label for="inputAddress2">Ngày sinh:</label>
            <input
              type="text"
              class="form-control"
              id="inputAddress2"
              placeholder=""
              name="birth"
              required
              value="{{birth}}"
            />
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputCity">Giới tính:</label>
              <select name="gender" id="cars" value={{gender}}>
                <option value="nam">Nam</option>
                <option value="nu">Nữ</option>
                <option value="khac">Khác</option>
              </select>
            </div>

            <div class="form-group col-md-6">

            </div>

          </div>

          <button type="submit" class="btn btn-primary">Chấp nhận</button>
        </form>
      </div>
    </div>
    <div class="col-1"></div>
  </div>
</div>