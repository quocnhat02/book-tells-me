<div class="card card-body">
  <h3>Thêm sách</h3>

  <form method="POST" action="/admin">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputName">Tên Sách:</label>
        <input
          type="text"
          class="form-control"
          id="inputName"
          placeholder="tên sách"
          name="nameBook"
          required
          value="{{nameBook}}"
        />
      </div>

    </div>
    <div class="form-group">
      <label for="inputAddress">Mô tả:</label>
      <input
        type="text"
        class="form-control"
        id="inputAddress"
        placeholder="mô tả sách"
        name="description"
        required
        value="{{description}}"
      />
    </div>
    <div class="form-group">
      <label for="inputAddress2">Url download:</label>
      <input
        type="text"
        class="form-control"
        id="inputAddress2"
        placeholder="https://..."
        name="urlDownload"
        required
        value="{{urlDownload}}"
      />
    </div>
    <div class="form-group">
      <label for="inputAddress2">Url Image:</label>
      <input
        type="text"
        class="form-control"
        id="inputAddress2"
        placeholder="https://..."
        name="image"
        required
        value="{{image}}"
      />
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputCity">Thể loại:</label>
        <input
          type="text"
          class="form-control"
          id="inputCity"
          name="genres"
          required
          value="{{genres}}"
        />
      </div>

      <div class="form-group col-md-6">
        <label for="inputAuthor">Tác giả:</label>
        <input
          type="text"
          class="form-control"
          id="inputAuthor"
          name="author"
          required
          value="{{author}}"
        />
      </div>

      <div class="form-group col-md-6">
        <label for="inputSlug">Slug:</label>
        <input
          type="text"
          class="form-control"
          id="inputSlug"
          name="slug"
          required
          value="{{slug}}"
        />
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Thêm Sách</button>
  </form>
</div>