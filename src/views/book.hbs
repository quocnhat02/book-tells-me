{{#each book}}
  <div class=".container-fluid p-4">
    <div class="row d-flex">

      <div class="col-6 p-4 border-2">
        <img
          class="img-fluid"
          width="300"
          src="{{this.image}}"
          alt="{{this.nameBook}}"
        />
      </div>
      <div class="col-1"></div>
      <div class="col-5 p-4 border-3">
        <h3>Tên sách: {{this.nameBook}}</h3>
        <h4>Tên tác giả: {{this.author}}</h4>
        <h4>Thể loại: {{this.genres}}</h4>

      </div>

      <div class="col-12">
        <hr />
        <h3><b>Mô tả</b></h3>
        <p>{{this.description}}</p>
        <hr />
      </div>
      <div class="col-12 d-flex justify-content-center p-4">

        Đọc sách:<a
          class="btn btn-primary ml-3"
          href="#"
          role="button"
        >Read</a></div>
      <div class="col-12 d-flex justify-content-center p-4">Tải sách:
        <a
          class="btn btn-success ml-3"
          href="{{this.urlDownload}}"
          role="button"
        >Download</a></div>
      <div class="col-12 d-flex justify-content-center p-4">Mua sách:
        <a class="btn btn-info ml-3" href="#" role="button">Buy</a></div>
    </div>
  </div>

{{/each}}